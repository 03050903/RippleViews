<resources>

    <style name="GreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/GreenThemeActionBar</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/BlueThemeActionBar</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <!-- other stuff -->

    <style name="GreenThemeActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/green_light</item>
    </style>

    <style name="BlueThemeActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue_light</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Holo.Button">
        <item name="colorControlHighlight">#ffffcc00</item>
        <item name="colorButtonNormal">#ff00ccff</item>
    </style>


</resources>
